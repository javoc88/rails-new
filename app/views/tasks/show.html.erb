<div class="container-fluid">
  <h1> <%= @task.title %> </h1>

    <%= link_to edit_task_path(@task) do %>
      <button type="button" class="btn btn-outline-secondary">Edit this task <i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
    <% end %>
    <p><%= @task.details %></p>
    <% if @task.completed %>
      <i class="fa fa-square" aria-hidden="true"></i>
    <% else %>
      <i class="fa fa-square-o" aria-hidden="true"></i>
    <% end %>

  <p><%= link_to "Back to list", tasks_path, class:"btn btn-primary" %></p>
</div>
